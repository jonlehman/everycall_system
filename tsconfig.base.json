{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@everycall/contracts": ["packages/contracts/src/index.ts"],
      "@everycall/config": ["packages/config/src/index.ts"],
      "@everycall/observability": ["packages/observability/src/index.ts"],
      "@everycall/tenancy": ["packages/tenancy/src/index.ts"],
      "@everycall/telephony": ["packages/telephony/src/index.ts"],
      "@everycall/ai": ["packages/ai/src/index.ts"],
      "@everycall/voice": ["packages/voice/src/index.ts"]
    }
  }
}
